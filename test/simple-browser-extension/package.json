{
    "name": "@massalabs/massa-wallet-provider-content-script",
    "version": "1.0.0",
    "description": "massa's wallet provider content script",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "up": "npm update",
        "check": "npm outdated",
        "upgrade": "npm run up && npm run check && npm run build",
        "build-package": "rimraf dist/* && tsc -d -p ./tsconfig.json",
        "build-bundle": "npm run gen-bundle",
        "gen-bundle": "browserify dist/index.js -p esmify --standalone injected > bundle.js",
        "uglify-bundle-optimize": "browserify dist/index.js -p esmify -i node-fetch -i http -i https -o bundle.min.js && browserify dist/index.js -p esmify -i node-fetch -g uglifyify --compress --mangle -o bundle.min.js",
        "build": "npm run fmt && npm run build-package && npm run build-bundle && cp bundle.js plugin/lib/massa-wallet-provider-content-script.js",
        "update-version-major": "npm version major",
        "update-version-minor": "npm version minor",
        "update-version-patch": "npm version patch",
        "test": "mocha -r ts-node/register test/**/*.spec.ts",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "prettier": "prettier --check .",
        "prettier:fix": "prettier --write .",
        "fmt": "npm run prettier:fix && npm run lint:fix",
        "fmt:check": "npm run prettier && npm run lint",
        "doc": "typedoc src/index.ts --name massa-wallet-provider --out docs/documentation/html --tsconfig tsconfig.json"
    },
    "author": "Massa Labs <info@massa.net>",
    "contributors": [
        "Evgeni Pirianov"
    ],
    "license": "(MIT AND Apache-2.0)",
    "homepage": "https://github.com/massalabs/massa-wallet-provider-content-script",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/massalabs/massa-wallet-provider-content-script"
    },
    "private": false,
    "publishConfig": {
        "access": "public",
        "registry": "https://registry.npmjs.org/"
    },
    "keywords": [
        "web3",
        "ts",
        "sdk",
        "massa"
    ],
    "files": [
        "dist",
        "bundle.js",
        "bundle.min.js"
    ],
    "dependencies": {
        "bignumber.js": "^9.1.1",
        "esmify": "^2.1.1"
    },
    "devDependencies": {
        "@massalabs/eslint-config": "^0.0.9",
        "@massalabs/prettier-config-as": "^0.0.2",
        "@types/bn.js": "^5.1.1",
        "@types/chai": "^4.3.4",
        "@types/mocha": "^10.0.1",
        "@types/node": "^18.13.0",
        "@types/secp256k1": "^4.0.3",
        "@typescript-eslint/eslint-plugin": "^5.52.0",
        "@typescript-eslint/parser": "^5.52.0",
        "browserify": "^17.0.0",
        "chai": "^4.3.7",
        "eslint": "^8.34.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-config-standard": "^17.0.0",
        "eslint-plugin-import": "^2.25.5",
        "eslint-plugin-jsdoc": "^40.0.0",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-promise": "^6.1.1",
        "husky": "^8.0.3",
        "lint-staged": "^13.1.2",
        "mocha": "^10.2.0",
        "node-ts": "^5.1.2",
        "prettier": "^2.8.4",
        "prettier-eslint": "^15.0.1",
        "prettier-standard": "^16.4.1",
        "ts-node": "^10.9.1",
        "tslib": "^2.5.0",
        "tslint": "^6.1.3",
        "typedoc": "^0.23.25",
        "typescript": "^4.9.5",
        "uglify-js": "^3.17.4",
        "uglifyify": "^5.0.2"
    },
    "prettier": "@massalabs/prettier-config-as"
}
